<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="A2D2B2C4App.QuestionPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="AddToolbarItem" Text="+" Clicked="AddToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>

    <ListView x:Name ="QuestionListView" ItemSelected="QuestionListView_ItemSelected">
        <ListView.ItemTemplate>
            <DataTemplate>
                <TextCell Text="{Binding QuestionBody}" TextColor="{StaticResource Color5}" />
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
    
</ContentPage>